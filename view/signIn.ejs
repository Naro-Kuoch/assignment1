    <div class="container pt-5 mt-5 mb-3" style="width: 40%;" >
        <h1 id="welcome" class="welcomeMessage">Welcome to Awesome shop</h3>
        <p id="question" class="welcomeMessage">Enter your email address and password to access to continue</p>

        <form name="login" action="http://localhost:3000/LogIn" method="POST">
    
            <div class="mb-3">
              <label for="email1" class="form-label">Email address</label>
              <span id="douplicate_email" class="error_message""></span>
              <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
             
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <% if(error) { %> 
                  <span class="error" style="color: red;float: right;"> <%=message %> </span>
              <% } %> 
              <input type="password" class="form-control" id="password" name="pwd">
            </div>
        
            <button id="submit" type="submit" class="btn btn-primary mb-5 mt-3" >Log In</button>
            <!-- <p id="error_message" style="color: red;"></p> -->
          </form>
          
        
    </div>
    <center><span>Don't have an account?</span>
        <a href="http://localhost:3000/signup">Sign Up</a></center>
    
